<header class="navbar">
  <nav class="navbar-inner">
    <%= link_to(image_tag('header-logo.png', class: "logo hidden-phone hidden-tablet", :alt => t('site.name')), root_path) %>

    <%= link_to(image_tag('logo-index.png', class: "logo hidden-desktop", :alt => t('site.name')), root_path) %>
    <div class="brand"></div>

    <!-- FIXME: search javascript functionality in 'layouts/search' -->
    <div class="search-nav">
      <%= form_tag search_path, method: 'get', class: "navbar-search pull-left" do %>
        <%= text_field_tag :q, nil, autocomplete: :off, class: 'search-query input-small', placeholder: t('search.name') %>
      <% end %>
    </div>
    <div class="explore-nav">
      <%= link_to explore_path do %>
    
        <%= t('or explore') %>
      <% end %>

    </div>
     <ul class="nav pull-right">
      <li>
        <%= link_to current_subject do %>
          <%= image_tag current_subject.logo.url(:small) %>
          <span class="name"><%= truncate_name(current_subject.name, length: 15) %></span>
        <% end %>
      </li>
      <li>
        <%= link_to(raw("<i class='icon_navbar-home'></i> "), root_path)%>
      </li>   
      <li>
        <%= link_to(raw("<i class='icon_navbar-contacts'></i> "), contacts_path) %>
      </li>
      <li class="hidden-desktop">
        <%= link_to(raw("<i class='icon_navbar-calendar'></i> "), contacts_path) %>
      </li>
      <li>
        <%= link_to(raw("<i class='icon_navbar-resources'></i> "), documents_path) %>
      </li>
      <li>
        <%= link_to(raw("<i class='icon_navbar-message'></i> "), conversations_path) %> 
          <!-- <span id="header_inbox_count">
            <%= link_to(current_subject.unread_messages_count.to_s, conversations_path) %>
          </span> -->
      </li>              
      <li> 
        <%= render partial: 'layouts/header_dropdown_menu' %>
      </li>
    </ul>
  </nav>
</header>
