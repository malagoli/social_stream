<header class="navbar">
  <nav class="navbar-inner">
    <%= link_to(image_tag('header-logo.png', class: "logo", :alt => t('site.name')), root_path) %>

    <%= link_to(image_tag('logo-index.png', class: "logo-responsive", :alt => t('site.name')), root_path) %>
    <div class="brand"></div>

    <!-- FIXME: search javascript functionality in 'layouts/search' -->
    <div class="search-mobile">
      <%= link_to(raw("<i class='icon_tool16-searcher'></i> "), explore_path)%>
      <input class="search-mobilie-input">
    </div>
    <div class="search-nav">
      <%= form_tag search_path, method: 'get', class: "navbar-search pull-left" do %>
        <%= text_field_tag :q, nil, autocomplete: :off, class: 'search-query input-small', placeholder: t('search.name') %>
      <% end %>
    </div>
    <div class="explore-nav">
      <%= link_to explore_path do %>
    
        <%= t('or explore') %>
      <% end %>

    </div>
     <ul class="nav pull-right">
      <li>
        <%= link_to current_subject do %>
          <%= image_tag current_subject.logo.url(:small) %>
          <span class="name"><%= truncate_name(current_subject.name, length: 15) %></span>
        <% end %>
      </li>
      <li>
        <%= link_to root_path do %>
          <i class='icon_navbar-home <%= current_header_icon_class(:home) %>'></i>
        <% end %>
      </li>   
      <li>
        <%= link_to contacts_path do %>
          <i class='icon_navbar-contacts <%= current_header_icon_class(:contacts) %>'></i>
        <% end %>
      </li>
      <li class="calendar_icon">
        <%= link_to events_path do %>
          <i class="icon_navbar-calendar <%= current_header_icon_class(:events) %>"></i> 
        <% end %>
      </li>
      <li>
      <%= link_to documents_path do %>
        <i class='icon_navbar-resources <%= current_header_icon_class(:resources) %>'></i>
      <% end %>
      </li>
      <li>
        <%= link_to conversations_path do %> 
          <i class='icon_navbar-message <%= current_header_icon_class(:messages) %>'></i>
        <% end %>
      </li>              
      <li> 
        <%= render partial: 'layouts/header_dropdown_menu' %>
      </li>
    </ul>
  </nav>
</header>
